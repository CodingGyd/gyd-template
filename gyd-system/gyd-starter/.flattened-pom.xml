<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.gydblog</groupId>
    <artifactId>gyd-system</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <groupId>com.gydblog</groupId>
  <artifactId>gyd-starter</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>8</maven.compiler.source>
    <maven.compiler.target>8</maven.compiler.target>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.gydblog</groupId>
      <artifactId>gyd-admin</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>com.gydblog</groupId>
      <artifactId>gyd-toolkit</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>com.gydblog</groupId>
      <artifactId>gyd-mt</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>com.gydblog</groupId>
      <artifactId>gyd-common</artifactId>
    </dependency>
    <dependency>
      <groupId>com.gydblog</groupId>
      <artifactId>gyd-security</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>com.gydblog</groupId>
      <artifactId>gyd-data</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>com.gydblog</groupId>
      <artifactId>gyd-swagger</artifactId>
      <version>${revision}</version>
    </dependency>
    <dependency>
      <groupId>io.springfox</groupId>
      <artifactId>springfox-boot-starter</artifactId>
    </dependency>
    <dependency>
      <groupId>io.swagger</groupId>
      <artifactId>swagger-models</artifactId>
      <version>1.6.2</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <version>2.1.1.RELEASE</version>
        <executions>
          <execution>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <fork>true</fork>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
          <warName>${project.artifactId}</warName>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
